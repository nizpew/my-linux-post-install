import React from 'react';
import { Card, CardMedia, CardContent, Typography, Avatar, Box, IconButton } from '@mui/material';
import { Favorite, BookmarkBorder } from '@mui/icons-material';
import { useNavigate } from 'react-router-dom';

interface PinProps {
  id: string;
  title: string;
  image: string;
  user: {
    id: string;
    name: string;
    avatar: string;
  };
}

export default function Pin({ id, title, image, user }: PinProps) {
  const navigate = useNavigate();

  return (
    <Card 
      sx={{ 
        position: 'relative',
        borderRadius: 3,
        cursor: 'pointer',
        '&:hover': {
          boxShadow: 6,
          '& .actions': {
            opacity: 1
          }
        }
      }}
      onClick={() => navigate(`/pin/${id}`)}
    >
      <CardMedia
        component="img"
        image={image}
        alt={title}
        sx={{ 
          height: 'auto',
          maxHeight: '500px',
          objectFit: 'cover'
        }}
      />
      
      <Box
        className="actions"
        sx={{
          position: 'absolute',
          top: 0,
          left: 0,
          right: 0,
          bottom: 0,
          bgcolor: 'rgba(0, 0, 0, 0.2)',
          opacity: 0,
          transition: 'opacity 0.2s',
          display: 'flex',
          flexDirection: 'column',
          justifyContent: 'space-between',
          p: 1
        }}
      >
        <Box sx={{ display: 'flex', justifyContent: 'flex-end', gap: 1 }}>
          <IconButton size="small" sx={{ color: 'white' }}>
            <Favorite />
          </IconButton>
          <IconButton size="small" sx={{ color: 'white' }}>
            <BookmarkBorder />
          </IconButton>
        </Box>
      </Box>

      <CardContent sx={{ p: 1 }}>
        <Typography variant="subtitle2" noWrap>
          {title}
        </Typography>
        <Box sx={{ display: 'flex', alignItems: 'center', gap: 1, mt: 1 }}>
          <Avatar
            src={user.avatar}
            sx={{ width: 24, height: 24 }}
            onClick={(e) => {
              e.stopPropagation();
              navigate(`/profile/${user.id}`);
            }}
          />
          <Typography variant="caption" color="text.secondary">
            {user.name}
          </Typography>
        </Box>
      </CardContent>
    </Card>
  );
} 